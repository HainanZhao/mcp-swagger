{
  "mcpServers": {
    "swagger-api": {
      "command": "mcp-swagger",
      "args": [
        "--swagger-url", "https://your-api.com/swagger.json",
        "--tool-prefix", "myapi",
        "--ignore-ssl"
      ]
    },
    "local-swagger": {
      "command": "mcp-swagger", 
      "args": [
        "--swagger-file", "/path/to/swagger.json",
        "--tool-prefix", "local",
        "--base-url", "http://localhost:8080"
      ]
    },
    "authenticated-api": {
      "command": "mcp-swagger",
      "args": [
        "--swagger-url", "https://secure-api.com/docs/swagger.json",
        "--tool-prefix", "secure",
        "--auth-header", "Bearer your-token-here",
        "--ignore-ssl"
      ]
    }
  }
}